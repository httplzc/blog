{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>
<div id="content_group">

{{! This is the post loop - each post will be output using this markup }}
<div class="wrapper">
<section class="masonry">
{{#foreach posts}}
<article class="{{post_class}}">

    {{#if image}}
    <figure class="post-image">
        <a href="{{url}}" class="js-ajax-link"><img src="{{image}}" alt=""></a>
    </figure>
    {{/if}}
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt">        
        <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">完整阅读</a></p>
    </section>
    <footer class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
        {{tags prefix="  "}}
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                <div class="extra_meta">
                    <a>
                        <i class="iconfont ic-list-read"></i> {{extra_post.readCount}}
                    </a>
                    <a>
                        <i class="iconfont ic-list-comments"></i> {{extra_post.commentCount}}
                    </a>
                    <a><i class="iconfont ic-list-like"></i> {{extra_post.likeCount}}</a>
                </div>		
    </footer>
</article>

{{/foreach}}
</section>
</div>
{{>"index_left"}}
 <div class="clear_float" style="height: 0px;clear: both"></div>
</div>
